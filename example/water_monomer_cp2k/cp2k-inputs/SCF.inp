@set PROJECT wat_mon
@set RUN ENERGY
&FORCE_EVAL
  METHOD Quickstep
    &DFT
    BASIS_SET_FILE_NAME /opt/software/gaia/prod/3.1.0/cp2k-2024.1-gcc-12.1-zfzq/share/data/BASIS_ccGRB_UZH
    POTENTIAL_FILE_NAME /opt/software/gaia/prod/3.1.0/cp2k-2024.1-gcc-12.1-zfzq/share/data/POTENTIAL_UZH
    &MGRID
      CUTOFF       800
      REL_CUTOFF    80
    &END MGRID
    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER PERIODIC
    &END POISSON
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1.0E-8
      MAX_SCF 300
      ADDED_MOS 4000
      CHOLESKY INVERSE
      &SMEAR  ON
         METHOD FERMI_DIRAC
         ELECTRONIC_TEMPERATURE [K] 900
         #fixmagneticmoment
      &END SMEAR
      &DIAGONALIZATION
          ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING
          METHOD BROYDEN_MIXING
          ALPHA   0.1
          BETA    1.5
          NBROYDEN  8
      &END MIXING
      &PRINT
        &RESTART
        &END
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE  PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE  DFTD3
          R_CUTOFF     1.0583544200000000E+01
          REFERENCE_FUNCTIONAL PBE
          PARAMETER_FILE_NAME /opt/software/gaia/prod/3.1.0/cp2k-2024.1-gcc-12.1-zfzq/share/data/dftd3.dat
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
      @include cell.sys
      @include coords.sys
    &KIND O
      BASIS_SET ccGRB-D-q6
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND H
      BASIS_SET ccGRB-D-q1
      POTENTIAL GTH-PBE-q1
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT ${PROJECT}
  RUN_TYPE ${RUN}
  PRINT_LEVEL MEDIUM
  EXTENDED_FFT_LENGTHS
&END GLOBAL










